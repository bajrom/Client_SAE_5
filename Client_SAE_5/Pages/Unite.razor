@page "/unites"
@using Client_SAE_5.Models
@inject UniteViewModel UniteViewModel

<PageTitle>Liste des unités</PageTitle>

<h1>Liste des unités</h1>

@if (UniteViewModel.Unites == null)
{
    <p><em>Chargement...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de l'unité</th>
                <th>Nom du sigle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var unite in UniteViewModel.Unites)
            {
                <tr>
                    <td>@unite.IdUnite</td>
                    <td>
                        @if (unite.IsEditable)
                        {
                            <input @bind="unite.NomUnite" />
                        }
                        else
                        {
                            <span>@unite.NomUnite</span>
                        }
                    </td>
                    <td>
                        @if (unite.IsEditable)
                        {
                            <input @bind="unite.SigleUnite" />
                        }
                        else
                        {
                            <span>@unite.SigleUnite</span>
                        }
                    </td>
                    <td>
                        @if (unite.IsEditable)
                        {
                            <button class="btn btn-success" @onclick="() => SavePage(unite)">Valider</button>
                        }
                        else
                        {
                            <button class="btn btn-primary" @onclick="() => EditPage(unite)">Modifier</button>
                        }
                        <button class="btn btn-danger" @onclick="() => DeletePage(unite.IdUnite)">Supprimer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Ajouter un nouveau unité</h2>
    <div>
        <input type="text" @bind="UniteViewModel.NewUnite.NomUnite" placeholder="Nom de l'unité" />
        <input type="text" @bind="UniteViewModel.NewUnite.SigleUnite" placeholder="Sigle de l'unité" />
        <button class="btn btn-primary" @onclick="AddPage">Ajouter</button>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await UniteViewModel.LoadAsync();
    }

    private async Task SavePage(Models.Unite unite)
    {
        await UniteViewModel.SaveAsync(unite);
        await UniteViewModel.LoadAsync(); // Recharge les données après sauvegarde
    }

    private void EditPage(Models.Unite unite)
    {
        UniteViewModel.Edit(unite);
    }

    private async Task DeletePage(int id)
    {
        Console.WriteLine("supprime bonsant");
        await UniteViewModel.DeleteAsync(id);
        await UniteViewModel.LoadAsync(); // Recharge les données après suppression
    }


    private async Task AddPage()
    {
        await UniteViewModel.AddAsync();
        await UniteViewModel.LoadAsync(); // Recharge les données après ajout
    }

    private void test()
    {
        Console.WriteLine("ça marche");
    }
}
