@page "/typesalles"
@using Client_SAE_5.Models
@inject TypeSalleViewModel TypeSalleViewModel

<PageTitle>Liste des types de salles</PageTitle>

<h1>Liste des types de salles</h1>

@if (TypeSalleViewModel.TypeSalles == null)
{
    <p><em>Chargement...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du type de salle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var typeSalle in TypeSalleViewModel.TypeSalles)
            {
                <tr>
                    <td>@typeSalle.IdTypeSalle</td>
                    <td>
                        @if (typeSalle.IsEditable)
                        {
                            <input @bind="typeSalle.NomTypeSalle" />
                        }
                        else
                        {
                            <span>@typeSalle.NomTypeSalle</span>
                        }
                    </td>
                    <td>
                        @if (typeSalle.IsEditable)
                        {
                            <button class="btn btn-success" @onclick="() => SavePage(typeSalle)">Valider</button>
                        }
                        else
                        {
                            <button class="btn btn-primary" @onclick="() => EditPage(typeSalle)">Modifier</button>
                        }
                        <button class="btn btn-danger" @onclick="() => DeletePage(typeSalle.IdTypeSalle)">Supprimer</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Ajouter un nouveau type de salle</h2>
    <div>
        <input type="text" @bind="TypeSalleViewModel.NewTypeSalle.NomTypeSalle" placeholder="Nom du type de salle" />
        <button class="btn btn-primary" @onclick="AddPage">Ajouter</button>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await TypeSalleViewModel.LoadAsync();
    }

    private async Task SavePage(Models.TypeSalle typeSalle)
    {
        await TypeSalleViewModel.SaveAsync(typeSalle);
        await TypeSalleViewModel.LoadAsync(); // Recharge les données après sauvegarde
    }

    private void EditPage(Models.TypeSalle typeSalle)
    {
        TypeSalleViewModel.Edit(typeSalle);
    }

    private async Task DeletePage(int idTypeSalle)
    {
        Console.WriteLine("supprime bonsant");
        await TypeSalleViewModel.DeleteAsync(idTypeSalle);
        await TypeSalleViewModel.LoadAsync(); // Recharge les données après suppression
    }


    private async Task AddPage()
    {
        await TypeSalleViewModel.AddAsync();
        await TypeSalleViewModel.LoadAsync(); // Recharge les données après ajout
    }

    private void test()
    {
        Console.WriteLine("ça marche");
    }
}
