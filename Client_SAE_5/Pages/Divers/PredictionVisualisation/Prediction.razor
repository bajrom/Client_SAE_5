@page "/predictions"
@inject HttpClientRaspberry Http

<h1>Liste des Capteurs</h1>

@if (Capteurs == null)
{
    <p>Chargement des données...</p>
}
else if (Capteurs.Count == 0)
{
    <p>Aucun capteur trouvé.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Salle</th>
                <th>Température Intérieure (°C)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var capteur in Capteurs)
            {
                <tr>
                    <td>@capteur.Salle</td>
                    <td>@capteur.TempInt</td>
                </tr>
            }
        </tbody>
    </table>
}

<button class="btn btn-primary mt-3" @onclick="RafraichirDonnees">Rafraîchir</button>

@code {
    private List<Capteur>? Capteurs;

    protected override async Task OnInitializedAsync()
    {
        await ChargerCapteurs();
    }

    private async Task ChargerCapteurs()
    {
        try
        {
            Capteurs = await Http.GetFromJsonAsync<List<Capteur>>("http://10.103.101.128:5173/api/InfluxData/data/capteurs");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de la récupération des données : {ex.Message}");
            Capteurs = new List<Capteur>(); // Défaut si erreur
        }
    }

    private async Task RafraichirDonnees()
    {
        Capteurs = null; // Réinitialiser pour montrer le chargement
        await ChargerCapteurs();
    }

    public class Capteur
    {
        public string Salle { get; set; } = string.Empty;
        public double TempInt { get; set; }
    }
}
